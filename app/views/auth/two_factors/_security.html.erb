<div class="row">
  <div class="card w-100">
    <div class="card-body">
      <h5 class="card-title">Password</h5>
      <p class="card-text">Last updated: <%= resource.password_changed_at&.strftime('%d %b %Y') %></p>
      <a href="#" class="btn btn-primary">Change password</a>
    </div>
  </div>
</div>

<div class="row">
  <div class="card w-100">
    <div class="card-body">
      <h5 class="card-title"><%= I18n.t('auth.two_factors.two_factor_authentication') %></h5>
      <% if resource.otp_required_for_login? %>
        <p class="card-text">✔️ <%= I18n.t('auth.two_factors.is_enabled', date: current_user.otp_updated_at&.strftime('%d %b %Y')) %>
        <%= link_to I18n.t('auth.two_factors.manage_2fa'), :edit_auth_two_factors, class: 'btn btn-primary' %>
      <% else %>
        <p><%= I18n.t('auth.two_factors.enable_2fa_recommendation') %>
        <p class="card-text">❌ <%= I18n.t('auth.two_factors.is_disabled') %></p>
        <%= link_to I18n.t('auth.two_factors.enable_2fa'), :new_auth_two_factors, class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
