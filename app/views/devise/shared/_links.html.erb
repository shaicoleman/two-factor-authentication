<%- if controller_name != 'sessions' %>
  <%= link_to I18n.t('auth.log_in'), :new_user_session %><br />
<% end -%>

<%- if :registerable.in?(User.devise_modules) && controller_name != 'registrations' %>
  <%= link_to "Sign up", :new_user_registration %><br />
<% end -%>

<%- if :recoverable.in?(User.devise_modules) && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", :new_user_password %><br />
<% end -%>

<%- if :confirmable.in?(User.devise_modules) && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", :new_user_confirmation %><br />
<% end -%>

<%- if :lockable.in?(User.devise_modules) && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", :new_user_unlock %><br />
<% end -%>
